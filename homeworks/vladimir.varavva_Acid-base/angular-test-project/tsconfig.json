{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "rootDir": ".",
    "exclude": [
        "node_modules",
        "dist",
        "**/*.ngfactory.ts",
        "**/*.shim.ts",
        "src/app/main*.ts"
    ],
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "./src/app/ngfactory",
        "entryModule": "src/app/app.module#AppModule",
        "skipMetadataEmit" : true
    }
}
