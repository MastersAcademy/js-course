{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "inlineSourceMap": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "types": ["node", "jasmine"]
